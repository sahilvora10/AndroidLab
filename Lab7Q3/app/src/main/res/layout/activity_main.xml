<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".MainActivity">

    <ImageButton
        android:id="@+id/simpleImageButtonHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@color/colorPrimaryDark"

        android:src="@mipmap/pcb_launcher_round"
        tools:ignore="MissingConstraints" />
    <ImageView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/simpleImage1"
    android:visibility="gone"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    android:background="@color/colorPrimaryDark"
    android:layout_below="@+id/simpleImageButtonHome"
    android:src="@mipmap/ic_launcher_round"
    tools:ignore="MissingConstraints"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/simpleImage2"
        android:visibility="gone"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@color/colorPrimaryDark"
        android:layout_below="@+id/simpleImageButtonHome"
        android:src="@drawable/ic_weekend_black_24dp"
        tools:ignore="MissingConstraints"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/simpleImage3"
        android:visibility="gone"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@color/colorPrimaryDark"
        android:layout_below="@+id/simpleImageButtonHome"
        android:src="@drawable/ic_whatshot_black_24dp"
        tools:ignore="MissingConstraints"/>


</RelativeLayout>
